<% @posts.each do |post| %>
	<div class="card">
    <div class="card-image">
      <%=link_to image_tag('https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png'), post %>
    </div>
    <div class="card-header">
      <p class="type"><%=link_to post.user.first_name, post.user%></p>
      <h2>
      	<%=link_to post.title, post%>
      	<small>
	      	<% if post.user == current_user %>
	      		<%=link_to "(edit)", edit_post_path(post.id)%>
	      		<%=link_to "(delete)", post_path(post.id),
	      			data: {:confirm  => 'Are you sure?'},
	      			:method => :delete %>
	      	<% end %>
      	</small>
      </h2>
      <p class="date"><%=post.created_at%></p>
    </div>
    <div class="card-copy">
      <p><%=post.body%></p>
    </div>
  </div>
<% end %>