<article class="type-system-traditional">
	
	<div class="hero">
	  <div class="hero-content">
	    <%=image_tag("https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_square.png", class: "hero-logo")%>
	    <h2><%=@user.first_name%> <%=@user.last_name%></h2>
	    <p><%=@user.email%></p>
	  </div>
	</div>
	<br>
	<% if @user == current_user %>
		<%= render "/posts/form" %>
	<% end %>
	<h2>Posts</h2>
	<div class="cards">
		<%=render "/posts/postcard"%>
	</div>
</article>